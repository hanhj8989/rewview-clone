<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:top="0dp">
                <bitmap android:gravity="center" android:src="@drawable/unchecked" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:top="0dp">
                <bitmap android:gravity="center" android:src="@drawable/checked" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="0dp">
                <bitmap android:gravity="center" android:src="@drawable/unchecked" />
            </item>
        </layer-list>
    </item>

</selector>